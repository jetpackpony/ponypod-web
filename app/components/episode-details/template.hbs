<div class="episode-details-image card-image {{if isPlaying 'playing' ''}}">
  <img src="{{episode.podcast.image}}">
  <a class="play-button play waves-effect waves-light" {{action 'play' on='click'}}>
    <i class="material-icons">play_arrow</i>
  </a>
  <a class="play-button pause waves-effect waves-light" {{action 'pause' on='click'}}>
    <i class="material-icons">pause</i>
  </a>
</div>
<div class="card-content">
  <h2>{{episode.title}}</h2>
  <div class="secondary">
    <div class="date">{{format-date episode.publishedAt}}</div>
    <div class="duration">{{format-duration episode.duration}}</div>
    <div class="new">
      <i class="material-icons">new_releases</i>
      new episode
    </div>
  </div>
  <div class="description">
    {{{episode.fullDescription}}}
  </div>
</div>
