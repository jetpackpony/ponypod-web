{{#if showSearchSpinner}}
  <div class="row load-spinner-container">
    {{infinity-loader-spinner}}
  </div>
{{else}}
  {{#each podcasts as |podcast|}}
    <div class="podcast" id="podcast-{{podcast.id}}">
      {{#link-to 'podcast' podcast.id title=podcast.title}}
        <img src="{{podcast.image}}">
      {{/link-to}}
    </div>
  {{else}}
  <div class="row empty-search-results">
    <div class="col s12">
      <div class="card-panel white">
        Sorry, we couldn't find any podcasts for "{{searchQuery}}"
      </div>
    </div>
  </div>
  {{/each}}
{{/if}}
