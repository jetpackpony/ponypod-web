<div class="nav-wrapper">
  <div class="left-side">
    <div class="nav-item">
      {{#if navigation.showBackArrow}}
        <a id="back-button" {{action 'onBackButtonClick' on='click'}}>
          <i class="material-icons">arrow_back</i>
        </a>
      {{else}}
        <a id="toggle-menu" {{action 'onOpenMenuClick' on='click'}}>
          <i class="material-icons">menu</i>
        </a>
      {{/if}}
    </div>
    <div class="nav-item nav-title">{{navigation.navTitle}}</div>
  </div>

  <div class="right-side">
    {{#if navigation.navBarSearch}}
      {{search-bar}}
    {{/if}}
    {{#if options}}
      <div class="nav-item">
        <a id="toggle-options">
          <i class="material-icons">more_vert</i>
        </a>
      </div>
    {{/if}}
  </div>
</div>
